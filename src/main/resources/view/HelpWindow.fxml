<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>
      <VBox fx:id="helpMessageContainer">
        <HBox alignment="CENTER">
          <children>
            <Label fx:id="commandSummary" styleClass="cell_big_label" text="Label" textFill="white">
              <HBox.margin>
                <Insets right="5.0" />
              </HBox.margin>
            </Label>
          </children>
          <opaqueInsets>
            <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
          </opaqueInsets>
          <padding>
            <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
          </padding>
        </HBox>
        <HBox>
            <children>
                <Label fx:id="helpMessage" text="Label">
                    <HBox.margin>
                        <Insets right="5.0" />
                    </HBox.margin>
                </Label>
                <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
                    <HBox.margin>
                        <Insets left="5.0" top="-5.0" />
                    </HBox.margin>
                </Button>
            </children>
            <opaqueInsets>
                <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
            </padding>
        </HBox>
        <Label fx:id="addPatient" alignment="BASELINE_RIGHT" text="Label" textFill="WHITE" wrapText="true">
          <HBox.margin>
            <Insets right="10.0" />
          </HBox.margin>
        </Label>
        <Label fx:id="editPatient" text="Label" textFill="WHITE" wrapText="true">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
        </Label>
        <Label fx:id="addRecord" text="Label" textFill="WHITE" wrapText="true">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
        </Label>
        <Label fx:id="editRecord" text="Label" textFill="WHITE" wrapText="true">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
        </Label>
        <Label fx:id="find" text="Label" textFill="WHITE" wrapText="true">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
        </Label>
        <Label fx:id="pin" text="Label" textFill="WHITE" wrapText="true">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
        </Label>
        <Label fx:id="unpin" text="Label" textFill="white" wrapText="true">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
        </Label>
        <Label fx:id="view" text="Label" textFill="white" wrapText="true">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
        </Label>
        <Label fx:id="delete" text="Label" textFill="white">
                <VBox.margin>
                    <Insets top="10.0" />
                </VBox.margin>
        </Label>
        <Label fx:id="list" text="Label" textFill="WHITE">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
        </Label>
        <Label fx:id="exit" text="Label" textFill="WHITE">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
        </Label>
      </VBox>
    </Scene>
  </scene>
</fx:root>
